<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TanulasmenuActivity"
    android:orientation="vertical"
    android:background="@drawable/hatter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_revert"
            android:id="@+id/visszatanulas"
            >

        </Button>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:textSize="30dp"
        android:text="Napi Szavak"
        android:layout_centerInParent="true"
        android:id="@+id/napibut"
        android:background="@drawable/button_shape"
        android:layout_margin="5dp">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/napibut"
        android:text="Tanult szavak"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:id="@+id/tanultBut"
        android:background="@drawable/button_shape"
        android:layout_margin="5dp">
    </Button>

</RelativeLayout>